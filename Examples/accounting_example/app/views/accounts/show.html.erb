<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @account.name %>
</p>

<p>
  <strong>Account type:</strong>
  <%= @account.account_type %>
</p>

<p>
  <strong>Currency:</strong>
  <%= @account.currency %>
</p>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Account</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% @account.entries.each do |entry| %>
      <tr>
        <td>
          <%= entry.date %>
        </td>
        <td>
          <%= entry.description %>
        </td>
        <td>
          From: <%= entry.source_account.name %><br />
          To: <%= entry.destination_account.name %>
        </td>
        <td>
          <%= number_to_currency (entry.source_account == @account ? (-1 * entry.amount) : entry.amount), unit: @account.currency %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_account_path(@account) %> |
<%= link_to 'Back', accounts_path %>

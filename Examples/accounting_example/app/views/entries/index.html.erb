<p id="notice"><%= notice %></p>

<h1>Entries</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>From account</th>
      <th>To account</th>
      <th>Amount</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%# attenzione! non si può usare find_each perché non rispetta l'ordine di Account#entries %>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.date %></td>
        <td><%= link_to entry.source_account.name, entry.source_account %></td>
        <td><%= link_to entry.destination_account.name, entry.destination_account %></td>
        <td><%= number_to_currency entry.amount, unit: '€', delimiter: '.', separator: ',' %></td>
        <td><%= entry.description %></td>
        <td><%= link_to 'Show', entry %></td>
        <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
        <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Entry', new_entry_path %>

<tr>
  <td><%= book.title %></td>
  <td><%= book.isbn %></td>
  <td><%= book.year %></td>
  <td><%= book.publisher %></td>
  <td><%= book.author %></td>
  <td><%= link_to 'Show', author_book_path(book.author, book) %></td>
  <td><%= link_to 'Edit', edit_author_book_path(book.author, book) %></td>
  <td><%= link_to 'Destroy', author_book_path(book.author, book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>
